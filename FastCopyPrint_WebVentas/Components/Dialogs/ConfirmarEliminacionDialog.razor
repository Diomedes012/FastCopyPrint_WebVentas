@using MudBlazor

<MudDialog>
    <TitleContent>
        <div class="d-flex align-center">
            <MudIcon Icon="@Icons.Material.Filled.Warning" Class="mr-3 mb-n1" Color="Color.Error" Size="Size.Large" />
            <MudText Typo="Typo.h5" Color="Color.Error">¿Eliminar registro?</MudText>
        </div>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body1">
            Estás a punto de eliminar: <strong>@Mensaje</strong>
        </MudText>
        <MudText Typo="Typo.body2" Class="mt-2 text-muted">
            Esta acción no se puede deshacer. ¿Estás seguro de continuar?
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancelar</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Submit">Sí, Eliminar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    [Parameter] public string Mensaje { get; set; } = "";

    void Cancel() => MudDialog.Cancel();
    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}